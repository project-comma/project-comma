<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="dao.IReviewDao">
  
  <insert id="insertReview" parameterType="java.util.HashMap" >
	insert into review_board (id, content, image, c_score) values
	(#{id}, #{content}, #{image}, #{c_score})
	
  </insert>
  
  <delete id="deleteReview" parameterType="int">
  	delete from review_board where number= #{number} 	
  </delete>
  
  <update id="updateReview" parameterType="java.util.HashMap">
  	update review_board set content= #{content}, image= #{image}, c_score= #{c_score}
  	where number= #{number}
  </update>
  
  <select id="select" resultType="java.util.HashMap" parameterType="int">
  	select * from review_board where number= #{number}
  </select>
  
  <select id="selectList" resultType="java.util.ArrayList" parameterType="java.util.HashMap">
 	select * from review_board 
  </select>
  
  </mapper>